<div class="item">
  <div>Avatar</div>
  <div>
    <input 
      type="url" 
      name="avatar_url" 
      placeholder="http://"
      value="{{teacher.avatar_url}}"
      >
  </div>
</div>
<div class="item">
  <div>Nome completo</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholde="Nome do professor(a)"
      value="{{teacher.name}}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date" 
      name="birth"
      value="{{teacher.birth}}"
    >
  </div>
</div>

<fieldset>
  <div class="item">
    <div>Grau de Escolaridade</div>
    <div>
      <select name="graduation">
        <option value="ensinomedio">Ensino Médio Completo</option>
        <option value="ensinosuperior" selected>Ensino Superior Completo</option>
        <option value="mestrado">Mestrado</option>
        <option value="doutorado">Doutorado</option>
      </select>
    </div>
  </div>
</fieldset>

<div class="item">
  <div>Tipo de Aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="presencial" {% if teacher.class_type == 'presencial' %}
        {% endif %} checked> Presencial</span>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="distancia" {% if teacher.class_type == 'distancia' %}
        {% endif %}> À Distância</span>   
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input 
      type="text" 
      name="subjects_taught" 
      placeholder="Separe as matérias por vírgula"
      value="{{teacher.subjects_taught}}"
    >    
  </div>
</div>

<button type="submit">Salvar</button>